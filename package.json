{
	"name": "zarm-snippets",
	"displayName": "Zarm Snippets",
	"description": "zarm mobile UI components snippets",
	"icon": "images/zarm.png",
	"version": "0.0.1",
	"publisher": "liangxiaojun",
	"engines": {
		"vscode": "^1.61.0"
	},
	"categories": [
		"Snippets"
	],
	"galleryBanner": {
		"color": "#08bc70",
		"theme": "light"
	},
	"repository": {
		"type": "git",
		"url": "https://git.zhonganinfo.com/zainfo/zarm-snippets/blob/dev/README.md"
	},
	"main": "./out/extension.js",
	"activationEvents": [
		"*"
	],
	"contributes": {
		"snippets": [
			{
				"language": "javascript",
				"path": "./snippets/snippets.json"
			},
			{
				"language": "typescript",
				"path": "./snippets/snippets.json"
			},
			{
				"language": "javascriptreact",
				"path": "./snippets/snippets.json"
			},
			{
				"language": "typescriptreact",
				"path": "./snippets/snippets.json"
			}
		],
		"commands": [
			{
				"command": "zarm-snippets.helloWorld",
				"title": "Hello World"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn compile",
		"init": "node main.js",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"@types/vscode": "^1.61.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"eslint": "^7.27.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2",
		"zarm": "^2.9.8"
	}
}
